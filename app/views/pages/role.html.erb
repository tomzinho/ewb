  <%= simple_form_for(@user, url: role_path) do |f| %>
    <%= f.error_notification %>
    <div class="form-line">
      <div class="label">
        <p>Continue as:</p>
      </div>

      <div class="options">
        <div class="form-inputs">
          <%= f.input_field :role, as: :radio_buttons, collection: [['candidate' , 'Candidate'], ['company', 'Company']], label_method: :second, value_method: :first, label: false,  wrapper_html: {class: 'inline'} %>
        </div>
      </div>

      <div class="submit">
        <div class="form-actions">
          <%= f.button :submit, "ok", class: "btn-apply-now" %>
        </div>

      </div>
    </div>
  <% end %>
