<div class="col-4 offset-4">

  <%= simple_form_for(@user, url: role_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :role, as: :radio_buttons, collection: [['candidate' , 'Candidate'], ['company', 'Company']], label_method: :second, value_method: :first %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "ok" %>
    </div>
  <% end %>
</div>
