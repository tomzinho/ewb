  <div class="container-home">
    <div class="row" style="margin-top: -40vh;">
      <% @jobs.each do |job| %>
        <%= link_to job_path(job), class: "col-sm-12 col-md-6 col-lg-4 col-xl-3"  do %>
        <div style="margin-bottom: 20px;">
          <div class="cards-offers">
            <div class="offer-h1">
             <%= job.title  %>
            </div>
            <div class="offer-h2">
              <%= job.company.name  %>
            </div>
            <div class="offer-p">
              <%= job.description.first(90) + "..."  %>
            </div>
            <!-- <div>
              <%#= link_to "Apply now", job_path(job), class: "btn-apply-now" %>
            </div> -->
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="yellow-box">

   <%= form_tag jobs_path, class: "form-inline", method: :get do %>
     <%= text_field_tag :query,
       params[:query],
       class: "form-control, search-bar",
       placeholder: "Find a job offer"
     %>

     <%= submit_tag "Search", class: "btn btn-search" %>
   <% end %>


  </div>


