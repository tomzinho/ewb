<% avatar_url = current_user.linkedin_picture_url || asset_url('default-user') %>
<%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
   <% if current_user.role == 'candidate' %>
    <% if  %>
      <%= link_to "Create", candidate_path(current_user), class: "dropdown-item" %>
    <% else %>
      <%= link_to "Profile", edit_candidate_path(current_user.candidate.id), class: "dropdown-item" %>
    <% end %>
  <% else %>
    <% if  %>
      <%= link_to "Create", '#', class: "dropdown-item" %>
    <% else %>
      <%= link_to "Profile", edit_company_path(current_user.candidate.id), class: "dropdown-item" %>
    <% end %>
  <% end %>

  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
</div>

