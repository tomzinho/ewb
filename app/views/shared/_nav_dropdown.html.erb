<% photo_thumb = current_user.candidate? ? current_user.candidate.photo_url : current_user.company.logo_url %>

<% avatar_url = current_user.linkedin_picture_url || photo_thumb || asset_url('default-user.png') %>
<%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
   <% if current_user.role == 'candidate' %>
      <%= link_to "Profile", edit_candidate_path(current_user.candidate.id), class: "dropdown-item" %>
  <% else %>
      <%= link_to "Profile", edit_company_path(current_user.company.id), class: "dropdown-item" %>
  <% end %>

  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
</div>

