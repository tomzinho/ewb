
<div class="container mt-2">
  <h1 class="text-center">Create a job offer</h1>
  <!-- <p>Please insert all role specifications</p> -->
  <div class="col-6 offset-3 mb-5">
    <%= simple_form_for @job, url: jobs_path(@job) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Clean form", type: "reset", class: "btn-outline-secondary" %>
    <% end %>
  </div>

</div>


