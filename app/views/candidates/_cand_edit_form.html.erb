      <option value="BSB">Brasilia</option>
      <option value="BSB">Salvador</option>
      <option value="FOR">Fortaleza</option>
      <option value="MAN">Manaus</option>
      <option value="BH">Belo Horizonte</option>
      <option value="CUR">Curitiba</option>

    </select> -->
  </div>

  <div class="skill-select">
    <%= f.input :skills_list, label: " ...", collection: %i[Rails C# Go Python Javascript], input_html:{ multiple: true, class: "select2-skills", label: "Test "} %>
  </div>


  <%= f.input :small_desc, label: "Short bio" %>
  <%= f.input :address %>
  <%= f.input :github_link %>

 <p> Work Authorizations </p>
  <%= f.input :workauth_bra, label:  "Brasil" %>
  <%= f.input :workauth_usa, label:  "United States" %>
  <%= f.input :workauth_eu, label:  "European Union" %>
  <%= f.input :workauth_can, label: "Canada" %>
  <%= f.input :workauth_aus, label: "Australia" %>
  <%= f.input :workauth_gb, label:  "Great Britain" %>


  <%= f.button :submit, class: "btn btn-primary" %>

<% end %>

