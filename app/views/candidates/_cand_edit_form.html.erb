<%= simple_form_for @candidate do |f| %>



  <div>
    <p>Olá <span><%= @candidate.user.email %></span></p>
  </div>


  <% if @candidate.photo.present? %>
    <%= cl_image_tag @candidate.photo, height: 300, width: 400, crop: :fill %>
  <% end %>

  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>


  <div class="city-select">

  <%= f.select :work_city, ["São Paulo", "Rio de Janeiro", "Curitiba"], input_html:{ class: "select2-city", label: "City" } %>

   <!--  <select class="select2-city" name="work_city">
      <option value="S  P"> São Paulo</option>
